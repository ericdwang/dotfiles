" Use letters instead of numbers for hintkeys
set hintkeys='fjdkslaghrueiwovncm'

" Show the status bar and tab numbers
set guioptions=ns

" Disable command line history
set history=0

" Highlight all search matches
set hlfind

" Default search engine
set defsearch=startpage

" Vimium style hint colors
colorscheme vimium

" Increase step sizes
nmap -b j 10j
nmap -b k 10k
nmap -b h 10h
nmap -b l 10l

" Vimium style keyboard navigation
nmap -b d <c-d>
nmap -b u <c-u>
nmap -b K gt
nmap -b J gT
nmap -b x d
nmap -b X u

" Allow Ctrl default usage
nmap -b <C-c> <C-v><C-c>
nmap -b <C-v> <C-v><C-v>
nmap -b <C-a> <C-v><C-a>
imap -b <C-c> <C-v><C-c>
imap -b <C-v> <C-v><C-v>
imap -b <C-a> <C-v><C-a>
imap -b <C-S-v> <C-v><C-S-v>

" Use insert mode for Google Docs
autocmd LocationChange docs\.google\.com :normal gi
