#!/bin/bash

output=$(amixer get "$BLOCK_INSTANCE" | tail -1)

volume=$(echo "$output" | grep -Eo "[0-9]+%" | tr -d %)

if echo "$output" | grep -q off; then
    icon=ðŸ”‡
elif [ "$volume" -eq 0 ]; then
    icon=ðŸ”ˆ
elif [ "$volume" -lt 60 ]; then
    icon=ðŸ”‰
else
    icon=ðŸ”Š
fi

echo "$icon $volume%"
